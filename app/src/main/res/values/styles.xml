<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>
    <style name="App_Head_Tab">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="App_Head_Tab_Line">
        <item name="android:layout_height">2dip</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="App_All_line_v">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@color/all_line</item>
    </style>
    <style name="App_All_line_h">
        <item name="android:layout_marginLeft">@dimen/dimen_05</item>
        <item name="android:layout_marginRight">@dimen/dimen_05</item>
        <item name="android:background">@color/all_line</item>
    </style>
    <style name="App_ListView_Head">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="App_ListView_Category_Head">
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="App_ListView_Category_Item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="App_Input_Item_Title">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">80dip</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="App_Input_Item_Edit">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
    </style>

    <style name="App_Office_Info_Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">@dimen/dimen_10</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="App_Office_Info_Value">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="App_Resume_Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="App_Resume_Item_Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="App_Resume_Info_LinearLayout">
        <item name="android:layout_height">@dimen/input_text_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/dimen_05</item>
        <item name="android:paddingBottom">@dimen/dimen_05</item>
        <item name="android:paddingLeft">@dimen/dimen_20</item>
        <item name="android:paddingRight">@dimen/dimen_20</item>
    </style>

    <style name="App_Resume_Desc_LinearLayout">
        <item name="android:layout_height">220dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/dimen_05</item>
        <item name="android:paddingBottom">@dimen/dimen_05</item>
        <item name="android:paddingLeft">@dimen/dimen_20</item>
        <item name="android:paddingRight">@dimen/dimen_20</item>
    </style>

    <style name="App_Resume_Info_Title">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:layout_marginRight">@dimen/dimen_20</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="App_Resume_Info_Value">
        <item name="android:textColor">@color/gary_btn</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="App_My_Info_LinearLayout">
        <item name="android:layout_height">@dimen/my_text_height</item>
        <item name="android:background">@drawable/listitem_bg</item>
        <item name="android:paddingTop">@dimen/dimen_05</item>
        <item name="android:paddingBottom">@dimen/dimen_05</item>
        <item name="android:paddingLeft">@dimen/dimen_20</item>
        <item name="android:paddingRight">@dimen/dimen_20</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
</resources>
