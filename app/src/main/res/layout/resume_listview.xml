<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout  android:id="@+id/llHead" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" />
    <LinearLayout android:id="@+id/llContent" android:layout_below="@+id/llHead"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <TextView android:id="@+id/tvTitle" android:gravity="center_vertical"
            android:layout_width="match_parent" android:layout_margin="@dimen/dimen_10"
            android:layout_height="44dip" android:text="简历模板" />
        <View
            android:layout_width="match_parent" android:layout_marginLeft="@dimen/dimen_10" android:layout_marginRight="@dimen/dimen_10"
            android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
        <com.xujun.app.widget.CustGridView android:layout_weight="1"
            android:layout_width="match_parent" android:numColumns="3"
            android:layout_height="match_parent" android:id="@+id/gridview"/>

    </LinearLayout>

</RelativeLayout>