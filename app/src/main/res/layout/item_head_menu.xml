<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/district_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent" android:background="@drawable/listitem_bg"
        android:layout_height="wrap_content" android:orientation="horizontal">
    <ImageView android:id="@+id/ivItemIcon" android:layout_marginLeft="@dimen/dimen_10" android:layout_centerVertical="true"
        android:layout_width="28dp" android:src="@drawable/ic_launcher"
        android:layout_height="28dp" />
    <TextView
        android:id="@+id/tvItemTitle"  android:textColor="@color/black"
        android:layout_width="wrap_content" android:textSize="@dimen/font_size_14" android:layout_marginLeft="@dimen/dimen_10"
        android:layout_height="match_parent" android:text="@string/menu_shake" android:gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_05" />
    </LinearLayout>
</LinearLayout>