<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView style="@style/App_Resume_Info_Title" android:layout_height="wrap_content" android:id="@+id/tvTitle"
        android:layout_width="wrap_content" android:layout_margin="@dimen/dimen_10" android:text="@string/resume_work_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
    <com.andreabaccega.widget.FormEditText android:id="@+id/etContent"  android:layout_margin="@dimen/dimen_10"
            android:layout_width="match_parent" style="@style/App_Input_Item_Edit" android:gravity="top"
            android:layout_height="50dip" android:singleLine="true" android:imeOptions="actionDone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        style="@style/App_Resume_Info_LinearLayout">
        <Button android:id="@+id/btnSave" android:background="@color/transparent"
            android:layout_width="match_parent" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="@string/btn_ok"/>
    </LinearLayout>
</LinearLayout>