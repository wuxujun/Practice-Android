<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content" android:layout_marginLeft="@dimen/dimen_05" android:layout_marginRight="@dimen/dimen_05"
    android:layout_height="wrap_content" android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/llHeader" android:orientation="vertical"
        android:layout_height="wrap_content" android:layout_alignParentTop="true">
    <LinearLayout  android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView android:id="@+id/tvTitle" style="@style/App_Input_Item_Title" android:textSize="@dimen/font_size_18"
            android:layout_width="match_parent" android:gravity="center_horizontal" android:textStyle="bold"
            android:layout_height="wrap_content" android:text="@string/about" android:layout_margin="@dimen/dimen_05"/>
    </LinearLayout>
        </LinearLayout>
    <ListView android:id="@+id/list" android:layout_below="@id/llHeader" android:layout_above="@+id/llFooter" android:layout_weight="1" android:background="@color/white"
        android:layout_width="match_parent" android:divider="@null" android:dividerHeight="@dimen/zero"
        android:layout_height="match_parent"/>
        <LinearLayout  android:background="@color/white" android:layout_alignParentBottom="true"
            android:layout_width="match_parent" android:layout_marginTop="@dimen/dimen_05" android:layout_marginBottom="@dimen/dimen_05" android:id="@+id/llFooter"
            android:layout_height="wrap_content" android:orientation="vertical">
         <Button  android:id="@+id/btnDone" android:layout_marginLeft="@dimen/dimen_20" android:layout_marginRight="@dimen/dimen_20"
        android:layout_width="match_parent" android:text="@string/btn_done" android:textColor="@color/white" android:gravity="center_vertical|center_horizontal"
        android:layout_height="36dp" android:background="@drawable/btn_bg"/>
            <Button android:background="@drawable/btn_gray_bg" android:layout_marginRight="@dimen/dimen_20" android:layout_marginLeft="@dimen/dimen_20" android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent" android:text="@string/btn_cancel" android:layout_marginTop="@dimen/dimen_05" android:layout_marginBottom="@dimen/dimen_05"
                android:layout_height="36dp" android:id="@+id/btnCancel" android:textColor="@color/white"/>
            </LinearLayout>

</RelativeLayout>