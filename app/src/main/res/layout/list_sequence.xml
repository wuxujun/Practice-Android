<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="@dimen/dimen_10"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout android:id="@+id/btnDataOrder1"
            android:layout_width="match_parent" android:gravity="center_horizontal"
            android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">
            <TextView android:id="@+id/tvDataOrder1" style="@style/App_ListView_Category_Head"
                android:layout_width="wrap_content" android:text="@string/data_order_2"
                android:layout_height="wrap_content"  />
            <ImageView android:id="@+id/ivDataOrder1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_grpe"/>
        </LinearLayout>
        <View android:layout_height="match_parent"
            android:layout_width="@dimen/line_w" style="@style/App_All_line_v"/>
        <LinearLayout android:id="@+id/btnDataOrder2"
            android:layout_width="match_parent" android:gravity="center_horizontal"
            android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">
            <TextView android:id="@+id/tvDataOrder2" style="@style/App_ListView_Category_Head"
                android:layout_width="wrap_content" android:text="@string/data_order_3"
                android:layout_height="wrap_content"  />
            <ImageView android:id="@+id/ivDataOrder2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_grpe"/>
        </LinearLayout>
        <View android:layout_height="match_parent"
            android:layout_width="@dimen/line_w" style="@style/App_All_line_v"/>
        <LinearLayout android:id="@+id/btnDataOrder3"
            android:layout_width="match_parent" android:gravity="center_horizontal"
            android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">
            <TextView android:id="@+id/tvDataOrder3" style="@style/App_ListView_Category_Head"
                android:layout_width="wrap_content" android:text="@string/data_order_7"
                android:layout_height="wrap_content"  />
            <ImageView android:id="@+id/ivDataOrder3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_grpe"/>
        </LinearLayout>
        <View android:layout_height="match_parent"
            android:layout_width="@dimen/line_w" style="@style/App_All_line_v"/>

        <LinearLayout android:id="@+id/btnDataOrder4"
            android:layout_width="match_parent" android:gravity="center_horizontal"
            android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">
            <TextView android:id="@+id/tvDataOrder4"
                android:layout_width="wrap_content" style="@style/App_ListView_Category_Head"
                android:layout_height="wrap_content"  android:text="@string/data_order_4"/>
            <ImageView android:id="@+id/ivDataOrder4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_grpe"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>