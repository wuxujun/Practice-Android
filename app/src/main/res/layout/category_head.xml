<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/app_item_bg">
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="@dimen/dimen_10"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout android:id="@+id/btnCategory1"
            android:layout_width="match_parent" android:gravity="center_horizontal"
            android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">
        <TextView android:id="@+id/tvCategory1"
                android:layout_width="wrap_content" android:text="@string/data_order_2" style="@style/App_ListView_Head" />
            <ImageView android:id="@+id/ivCategory1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_grpe"/>
            </LinearLayout>
        <View android:layout_height="match_parent" android:id="@+id/line1"
            android:layout_width="@dimen/line_w" style="@style/App_All_line_v"/>
        <LinearLayout android:id="@+id/btnCategory2"
            android:layout_width="match_parent" android:gravity="center_horizontal"
            android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">

        <TextView android:id="@+id/tvCategory2"
                android:layout_width="wrap_content" android:text="@string/data_order_3"   style="@style/App_ListView_Head"/>
            <ImageView android:id="@+id/ivCategory2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_grpe"/>
        </LinearLayout>
        <View android:layout_height="match_parent" android:id="@+id/line2"
            android:layout_width="@dimen/line_w" style="@style/App_All_line_v"/>
        <LinearLayout android:id="@+id/btnCategory3"
            android:layout_width="match_parent" android:gravity="center_horizontal"
            android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">

        <TextView android:id="@+id/tvCategory3"
                android:layout_width="wrap_content" android:text="@string/data_order_4"  style="@style/App_ListView_Head"/>
        <ImageView android:id="@+id/ivCategory3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/arrow_down_grpe"/>
    </LinearLayout>
        <View android:layout_height="match_parent" android:id="@+id/line3"
            android:layout_width="@dimen/line_w" style="@style/App_All_line_v"/>
        <LinearLayout android:id="@+id/btnCategory4"
            android:layout_width="match_parent" android:gravity="center_horizontal"
            android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">

        <TextView android:id="@+id/tvCategory4"
                android:layout_width="wrap_content"  style="@style/App_ListView_Head"  android:text="@string/data_order_7"/>
    <ImageView android:id="@+id/ivCategory4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:src="@drawable/arrow_down_grpe"/>
</LinearLayout>

    </LinearLayout>
</LinearLayout>