<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="@dimen/dimen_10"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView android:id="@+id/tvCategory1" android:layout_weight="1"
                android:layout_width="wrap_content" android:text="@string/category_head_1" style="@style/App_ListView_Head" />
        <View android:layout_height="match_parent"
            android:layout_width="@dimen/line_w" style="@style/App_All_line_v"/>
        <TextView android:id="@+id/tvCategory2" android:layout_weight="1"
                android:layout_width="wrap_content" android:text="@string/category_head_2"   style="@style/App_ListView_Head"/>
        <View android:layout_height="match_parent"
            android:layout_width="@dimen/line_w" style="@style/App_All_line_v"/>
        <TextView android:id="@+id/tvCategory3" android:layout_weight="1"
                android:layout_width="wrap_content" android:text="@string/category_head_3"  style="@style/App_ListView_Head"/>
        <View android:layout_height="match_parent"
            android:layout_width="@dimen/line_w" style="@style/App_All_line_v"/>
        <TextView android:id="@+id/tvCategory4" android:layout_weight="1"
                android:layout_width="wrap_content"  style="@style/App_ListView_Head"  android:text="@string/category_head_4"/>

    </LinearLayout>
</LinearLayout>