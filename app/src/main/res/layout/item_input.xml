<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View android:id="@+id/empty" android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20" android:background="@color/app_item_bg"/>
    <LinearLayout style="@style/App_My_Info_LinearLayout" android:layout_height="110dp" android:id="@+id/avatar" android:visibility="gone"
        android:layout_width="match_parent" android:orientation="horizontal" android:gravity="center_vertical">
        <ImageView android:background="@drawable/ic_launcher"
            android:layout_width="80dp" android:id="@+id/ivIcon"
            android:layout_height="80dp" />
        <TextView android:id="@+id/tvItemAvatar" style="@style/App_Resume_Info_Value"
            android:layout_width="match_parent" android:text="@string/my_update_avatar"/>
    </LinearLayout>
    <LinearLayout style="@style/App_My_Info_LinearLayout" android:id="@+id/content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <TextView android:id="@+id/tvItemTitle"
            android:layout_width="wrap_content" style="@style/App_Resume_Info_Title" android:text="@string/my_nick_name"/>
        <TextView android:id="@+id/tvItemValue" style="@style/App_Resume_Info_Value"
            android:layout_width="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent" android:layout_marginLeft="@dimen/dimen_05" android:layout_marginRight="@dimen/dimen_05"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>

</LinearLayout>