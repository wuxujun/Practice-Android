<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="@dimen/dimen_10"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:orientation="horizontal">
            <TextView android:id="@+id/tvDataOrder1"
                android:layout_width="match_parent" android:text="@string/data_order_1"
                android:layout_height="wrap_content"  />
            <ImageView android:id="@+id/ivDataOrder1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_white"/>
        </LinearLayout>
        <view
            android:layout_width="@dimen/line_w" android:focusable="false" android:focusableInTouchMode="false"
            android:layout_height="@dimen/dimen_10" android:layout_gravity="center_vertical" android:background="@color/all_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:orientation="horizontal">
            <TextView android:id="@+id/tvDataOrder2"
                android:layout_width="match_parent" android:text="@string/data_order_2"
                android:layout_height="wrap_content"  />
            <ImageView android:id="@+id/ivDataOrder2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_white"/>
        </LinearLayout>
        <view
            android:layout_width="@dimen/line_w" android:focusable="false" android:focusableInTouchMode="false"
            android:layout_height="@dimen/dimen_10" android:layout_gravity="center_vertical" android:background="@color/all_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:orientation="horizontal">
            <TextView android:id="@+id/tvDataOrder3"
                android:layout_width="match_parent" android:text="@string/data_order_3"
                android:layout_height="wrap_content"  />
            <ImageView android:id="@+id/ivDataOrder3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_white"/>
        </LinearLayout>
        <view
            android:layout_width="@dimen/line_w" android:focusable="false" android:focusableInTouchMode="false"
            android:layout_height="@dimen/dimen_10" android:layout_gravity="center_vertical" android:background="@color/all_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:orientation="horizontal">
            <TextView android:id="@+id/tvDataOrder4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  android:text="@string/data_order_4"/>
            <ImageView android:id="@+id/ivDataOrder4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/arrow_down_white"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>