<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/action_bar_bg_color"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/ll_tab_home"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_tab_home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/ic_tab_home" />
            <TextView
                android:id="@+id/tv_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_home"
                android:layout_marginTop="-5dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_category"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ib_tab_category"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/ic_tab_category" />

            <TextView
                android:id="@+id/tv_tab_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_category"
                android:layout_marginTop="-5dp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_attention"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_tab_attention"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/ic_tab_attent" />

            <TextView
                android:id="@+id/tv_tab_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_attention"
                android:layout_marginTop="-5dp"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_resume"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_tab_resume"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/ic_tab_resume" />

            <TextView
                android:id="@+id/tv_tab_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_resume"
                android:layout_marginTop="-5dp"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_my"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_tab_my"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/ic_tab_my" />

            <TextView
                android:id="@+id/tv_tab_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_my"
                android:layout_marginTop="-5dp"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>