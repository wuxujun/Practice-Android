<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:background="@drawable/listitem_bg"
        android:layout_width="match_parent" android:layout_margin="@dimen/dimen_10"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView android:id="@+id/tvTitle" android:layout_weight="1"  android:gravity="center_vertical"
            android:layout_width="match_parent" android:text="122" android:maxLines="2" android:textStyle="bold"
            android:layout_height="44dip" android:layout_marginLeft="@dimen/dimen_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/tvTime" android:layout_weight="1"  android:gravity="center_vertical"
                android:layout_width="match_parent" android:text="122" android:singleLine="true"
                android:layout_height="36dip" android:layout_marginLeft="@dimen/dimen_10"/>
            <TextView android:id="@+id/tvOffice"  android:gravity="center_vertical"
                android:layout_width="wrap_content" android:text="122" android:singleLine="true"
                android:layout_height="36dip" android:layout_marginLeft="@dimen/dimen_10"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>