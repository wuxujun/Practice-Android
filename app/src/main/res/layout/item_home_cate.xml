<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal">
    <View android:id="@+id/horLine"
        android:layout_width="@dimen/line_w" android:layout_marginTop="@dimen/dimen_05" android:layout_marginBottom="@dimen/dimen_05"
        android:layout_height="match_parent" android:background="@color/all_line"/>
    <LinearLayout android:layout_weight="1"
        android:layout_width="match_parent" android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content" android:orientation="vertical">
        <View android:id="@+id/verLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
        <LinearLayout android:layout_weight="1" android:background="@drawable/listitem_bg"
            android:layout_width="match_parent" android:gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content" android:orientation="vertical">
        <ImageView
            android:layout_width="48dp "
            android:layout_height="48dp" android:id="@+id/ivIcon" android:src="@drawable/ic_launcher"  android:layout_margin="@dimen/dimen_03"/>
        <TextView
            android:id="@+id/tvItemTitle" android:layout_marginBottom="@dimen/dimen_10"
            android:layout_width="wrap_content" android:textColor="@color/black"
            android:layout_height="wrap_content" android:text="@string/menu_shake"/>
            </LinearLayout>
    </LinearLayout>

</LinearLayout>