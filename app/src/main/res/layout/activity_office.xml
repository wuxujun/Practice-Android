<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true">
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_above="@+id/llBottom"/>
    <LinearLayout android:id="@+id/llBottom"
        android:layout_width="match_parent" android:layout_alignParentBottom="true"
        android:layout_height="64dp" android:orientation="vertical">
        <Button android:id="@+id/btnSubmit" android:text="@string/office_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>