<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_marginTop="@dimen/dimen_05"
        android:layout_width="match_parent" android:layout_gravity="fill_vertical"
        android:layout_height="88dp" android:gravity="center_vertical|center_horizontal">
        <LinearLayout android:id="@+id/btnResume1" android:background="@drawable/listitem_bg"
            android:layout_width="match_parent" android:layout_weight="1" android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent" android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content" android:layout_margin="@dimen/dimen_10"
                android:layout_height="wrap_content" android:src="@drawable/ic_resume_info"/>
            <TextView
                android:layout_width="wrap_content" style="@style/App_Resume_Title"
                android:layout_height="wrap_content"  android:text="@string/resume_head_1"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/line_w" android:layout_marginBottom="@dimen/dimen_05" android:layout_marginTop="@dimen/dimen_05"
            android:layout_height="match_parent" android:background="@color/all_line"/>
        <LinearLayout android:id="@+id/btnResume2" android:background="@drawable/listitem_bg"
            android:layout_width="match_parent" android:layout_weight="1" android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent" android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content" android:layout_margin="@dimen/dimen_10"
                android:layout_height="wrap_content" android:src="@drawable/ic_resume_photo"/>

            <TextView
            android:layout_width="wrap_content" style="@style/App_Resume_Title"
            android:layout_height="wrap_content"  android:text="@string/resume_head_2"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_w" android:layout_marginBottom="@dimen/dimen_05" android:layout_marginTop="@dimen/dimen_05"
            android:layout_height="match_parent" android:background="@color/all_line"/>
        <LinearLayout android:id="@+id/btnResume3" android:background="@drawable/listitem_bg"
            android:layout_width="match_parent" android:layout_weight="1" android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent" android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content" android:layout_margin="@dimen/dimen_10"
                android:layout_height="wrap_content" android:src="@drawable/ic_resume_work"/>

            <TextView
            android:layout_width="wrap_content" style="@style/App_Resume_Title"
            android:layout_height="wrap_content"  android:text="@string/resume_head_3"/>
            </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
    <LinearLayout
        android:layout_width="match_parent" android:layout_marginBottom="@dimen/dimen_05"
        android:layout_height="88dp" android:gravity="center_horizontal|center_vertical">
        <LinearLayout android:id="@+id/btnResume4" android:background="@drawable/listitem_bg"
            android:layout_width="match_parent" android:layout_weight="1" android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent" android:orientation="horizontal">
            <ImageView android:layout_margin="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/ic_resume_lang"/>
            <TextView
            android:layout_width="wrap_content" style="@style/App_Resume_Title"
            android:layout_height="wrap_content"  android:text="@string/resume_head_4"/>
</LinearLayout>
        <View
            android:layout_width="@dimen/line_w" android:layout_marginBottom="@dimen/dimen_05" android:layout_marginTop="@dimen/dimen_05"
            android:layout_height="match_parent" android:background="@color/all_line"/>

        <LinearLayout android:id="@+id/btnResume5" android:background="@drawable/listitem_bg"
            android:layout_width="match_parent" android:layout_weight="1" android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent" android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content" android:layout_margin="@dimen/dimen_10"
                android:layout_height="wrap_content" android:src="@drawable/ic_resume_honor"/>

            <TextView
            android:layout_width="wrap_content" style="@style/App_Resume_Title"
            android:layout_height="wrap_content"  android:text="@string/resume_head_5"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_w" android:layout_marginBottom="@dimen/dimen_05" android:layout_marginTop="@dimen/dimen_05"
            android:layout_height="match_parent" android:background="@color/all_line"/>

        <LinearLayout android:id="@+id/btnResume6" android:background="@drawable/listitem_bg"
            android:layout_width="match_parent" android:layout_weight="1" android:gravity="center_vertical|center_horizontal"
            android:layout_height="match_parent" android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content" android:layout_margin="@dimen/dimen_10"
                android:layout_height="wrap_content" android:src="@drawable/ic_resume_life"/>

            <TextView
            android:layout_width="wrap_content" style="@style/App_Resume_Title"
            android:layout_height="wrap_content"  android:text="@string/resume_head_6"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>