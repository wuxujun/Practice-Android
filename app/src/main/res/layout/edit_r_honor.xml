<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent" style="@style/App_Resume_Info_LinearLayout">
        <TextView style="@style/App_Resume_Info_Title"
            android:layout_width="wrap_content" android:text="@string/resume_honor_name"/>
        <com.andreabaccega.widget.FormEditText android:id="@+id/etHonorName"
            android:layout_width="match_parent" style="@style/App_Input_Item_Edit"
            android:layout_height="match_parent" android:layout_weight="1" android:imeOptions="actionNext"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
    <LinearLayout
        android:layout_width="match_parent" style="@style/App_Resume_Info_LinearLayout">
        <TextView
            android:layout_width="wrap_content" style="@style/App_Resume_Info_Title" android:text="@string/resume_honor_time"/>
        <TextView android:id="@+id/tvHonorTime"
            android:layout_width="match_parent" style="@style/App_Input_Item_Edit"
            android:layout_height="match_parent" android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
    <LinearLayout
        android:layout_width="match_parent" style="@style/App_Resume_Desc_LinearLayout">
        <TextView
            android:layout_width="wrap_content" android:gravity="top" style="@style/App_Resume_Info_Title" android:text="@string/resume_honor_content"/>
        <com.andreabaccega.widget.FormEditText android:id="@+id/etHonorContent"
            android:layout_width="match_parent" style="@style/App_Input_Item_Edit" android:gravity="top"
            android:layout_height="match_parent" android:layout_weight="1" android:imeOptions="actionNext"/>
    </LinearLayout>
</LinearLayout>