<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" style="@style/App_Resume_Info_LinearLayout">
        <TextView style="@style/App_Resume_Info_Title"
            android:layout_width="wrap_content" android:text="@string/resume_lift_ogr"/>
        <com.andreabaccega.widget.FormEditText android:id="@+id/etOrgName"
            android:layout_width="match_parent" style="@style/App_Input_Item_Edit"
            android:layout_height="match_parent" android:layout_weight="1" android:imeOptions="actionNext"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
    <LinearLayout
        android:layout_width="match_parent" style="@style/App_Resume_Info_LinearLayout">
        <TextView
            android:layout_width="wrap_content" style="@style/App_Resume_Info_Title" android:text="@string/resume_work_office"/>
        <com.andreabaccega.widget.FormEditText android:id="@+id/etOffice"
            android:layout_width="match_parent" style="@style/App_Input_Item_Edit"
            android:layout_height="match_parent" android:layout_weight="1" android:imeOptions="actionNext"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
    <LinearLayout
        android:layout_width="match_parent" style="@style/App_Resume_Info_LinearLayout">
        <TextView
            android:layout_width="wrap_content" style="@style/App_Resume_Info_Title" android:text="@string/resume_work_time"/>
        <TextView android:id="@+id/tvTime"
            android:layout_width="match_parent" style="@style/App_Input_Item_Edit"
            android:layout_height="match_parent" android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
    <LinearLayout
        android:layout_width="match_parent" style="@style/App_Resume_Info_LinearLayout">
        <TextView
            android:layout_width="match_parent" android:layout_weight="1" style="@style/App_Resume_Info_Title" android:text="@string/resume_work_content"/>
        <Button android:id="@+id/btnAdd" android:background="@color/transparent"
            android:layout_width="wrap_content" android:text="Add"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
</LinearLayout>