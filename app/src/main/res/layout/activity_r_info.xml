               android:layout_width="match_parent"
               android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
           <LinearLayout style="@style/App_Resume_Info_LinearLayout"
               android:layout_width="match_parent"  android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"  style="@style/App_Resume_Info_Title" android:text="@string/resume_info_mobile"/>
               <TextView android:id="@+id/tvMobile" style="@style/App_Resume_Info_Value"
                   android:layout_width="match_parent" />
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/line_h" android:background="@color/all_line"/>
           <LinearLayout style="@style/App_Resume_Info_LinearLayout"
               android:layout_width="match_parent"  android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"  style="@style/App_Resume_Info_Title" android:text="@string/resume_info_email"/>
               <TextView android:id="@+id/tvEmail"
                   android:layout_width="match_parent" style="@style/App_Resume_Info_Value" />
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/line_h" android:background="@color/all_line"/>

        </LinearLayout>

</ScrollView>

