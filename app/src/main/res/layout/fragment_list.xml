<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true">
    <LinearLayout android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true" android:orientation="vertical"></LinearLayout>
    <ListView android:id="@+id/list" android:layout_below="@+id/llHeader"
        android:dividerHeight="@dimen/zero"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:scrollbars="none"/>
</RelativeLayout>