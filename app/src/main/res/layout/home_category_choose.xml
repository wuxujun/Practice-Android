<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="@color/white">
    <com.xujun.banner.Banner android:id="@+id/banner" android:layout_alignParentTop="true"
        android:layout_height="@dimen/home_banner_height" android:layout_width="match_parent" />
    <com.xujun.app.widget.CustGridView
        android:layout_below="@+id/banner"
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_category_gridview_height"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/white"
        android:choiceMode="singleChoice"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:state_checkable="true"
        android:stretchMode="columnWidth" >
    </com.xujun.app.widget.CustGridView>
</RelativeLayout>