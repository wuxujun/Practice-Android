<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="@dimen/dimen_10"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout android:gravity="center_horizontal" android:id="@+id/btnCamera"
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent" android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content" android:background="@drawable/ic_launcher"
                android:layout_height="wrap_content" />
            <TextView android:textSize="@dimen/font_size_16"
                android:layout_width="match_parent" android:gravity="center_horizontal"
                android:layout_height="wrap_content" android:text="@string/btn_camera"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:id="@+id/btnUpload"
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent" android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content" android:background="@drawable/ic_launcher"
                android:layout_height="wrap_content" />
            <TextView android:gravity="center_horizontal"
                android:layout_width="match_parent" android:textSize="@dimen/font_size_16"
                android:layout_height="wrap_content" android:text="@string/btn_upload"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>